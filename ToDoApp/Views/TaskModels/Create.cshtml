@model ToDoApp.Models.TaskModel

@{
    ViewData["Title"] = "Dodaj nowe zadanie";
}

<h1>Nowe Zadanie</h1>

<h4>Wprowadź dane nowego zadania</h4>
<hr />
<div id="wrapper">
    <div class="row centeredDiv">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label">Temat</label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Zawartość</label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContentFile" class="control-label">Plik</label>
                    <input type="file" asp-for="ContentFile" class="form-control" />
                    <span asp-validation-for="ContentFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Insert_Date" class="form-control" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="Task_Date" class="control-label">Data</label>
                    <input asp-for="Task_Date" class="form-control" />
                    <span asp-validation-for="Task_Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Lokalizacja?xD (tu trzeba coś wymyślić)</label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input class="form-check-input" asp-for="Completed" type="hidden" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

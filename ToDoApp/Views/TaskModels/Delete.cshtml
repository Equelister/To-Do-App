@model ToDoApp.Models.TaskModel

@{
    ViewData["Title"] = "Usuwanie";
}

<h1>Usuwanie</h1>

<h3>Czy jesteś pewnien, że chcesz usunąć wybrane zadanie?</h3>
<div>
    <h4>Zadanie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContentFile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContentFile)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Insert_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insert_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Task_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Task_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Completed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Completed)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index">Wróć</a>
    </form>
</div>
